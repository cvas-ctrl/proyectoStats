{% extends 'base.html.twig' %}

{% block body %}
    <div class="container py-5 text-white">
        <h2 class="text-success mb-4"><i class="fas fa-users-cog"></i> Gestión de Usuarios</h2>

        <div class="table-responsive bg-dark rounded border border-success">
            <table class="table table-dark table-hover mb-0">
                <thead>
                <tr>
                    <th>Email</th>
                    <th>Roles</th>
                    <th class="text-end">Acciones</th>
                </tr>
                </thead>
                <tbody>
                {% for user in usuarios %}
                    <tr>
                        <td>{{ user.email }}</td>
                        <td>
                            {% for role in user.roles %}
                                <span class="badge {{ role == 'ROLE_ADMIN' ? 'bg-danger' : 'bg-info' }}">{{ role }}</span>
                            {% endfor %}
                        </td>
                        <td class="text-end">
                            <div class="btn-group">
                                <a href="{{ path('admin_user_rol', {id: user.id}) }}"
                                   class="btn btn-outline-warning btn-sm">
                                    <i class="fas fa-user-shield"></i>
                                    {{ 'ROLE_ADMIN' in user.roles ? 'Quitar Admin' : 'Hacer Admin' }}
                                </a>

                                <a href="{{ path('admin_user_borrar', {id: user.id}) }}"
                                   class="btn btn-outline-danger btn-sm"
                                   onclick="return confirm('¿Seguro que quieres borrar a este usuario?')">
                                    <i class="fas fa-trash"></i> Eliminar
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
