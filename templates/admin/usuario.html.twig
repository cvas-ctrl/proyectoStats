{% extends 'base.html.twig' %}

{% block body %}
    <div class="container py-5 text-white">
        <div class="mb-4">
            <a href="{{ path('admin_usuarios') }}" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Volver al listado
            </a>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="card bg-dark border-info shadow">
                    <div class="card-body text-center">
                        <div class="bg-info text-dark rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px; font-size: 2rem;">
                            {{ user.email|first|upper }}
                        </div>
                        <h3 class="h5 text-info">{{ user.username }}</h3>
                        <span class="badge bg-info mb-2">{{ user.email }}</span>
                        <h3 class="small italic text-muted">Fecha de registro:
                            {{ user.fechaRegistro|date('d/m/Y') }}
                        </h3>
                        <hr class="border-secondary">

                        <div class="text-start mb-3">
                            <label class="text-muted small text-uppercase">Roles asignados</label>
                            <div class="mt-1">
                                {% for role in user.roles %}
                                    <span class="badge {{ role == 'ROLE_ADMIN' ? 'bg-danger' : 'bg-info' }}">{{ role }}</span>
                                {% endfor %}
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <a href="{{ path('admin_user_rol', {id: user.id}) }}" class="btn btn-warning btn-sm">
                                <i class="fas fa-user-shield"></i> Alternar Rango Admin
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card bg-dark border-secondary shadow">
                    <div class="card-header bg-secondary text-white fw-bold">
                        <i class="fas fa-history me-2"></i> Actividad del Usuario
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-dark table-hover mb-0">
                                <thead>
                                <tr class="small text-muted">
                                    <th class="ps-3">Elemento</th>
                                    <th class="text-center">Nota</th>
                                    <th>Comentario</th>
                                    <th class="text-end pe-3">Fecha</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for val in user.valoraciones %}
                                    <tr class="align-middle">
                                        <td class="ps-3">
                                            <span class="fw-bold">{{ val.elemento.nombre }}</span>
                                            <br><small class="text-info">{{ val.elemento.categoria.nombre }}</small>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-warning text-white">{{ val.puntuacion }} ⭐</span>
                                        </td>
                                        <td class="small italic text-muted">
                                            {{ val.comentario ? '"' ~ val.comentario ~ '"' : '-- Sin comentario --' }}
                                        </td>
                                        <td class="text-end pe-3 small">
                                            {{ val.fechaCreacion|date('d/m/Y') }}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4" class="text-center py-4 text-muted italic">
                                            Este ciudadano aún no ha interactuado con ningún elemento.
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
