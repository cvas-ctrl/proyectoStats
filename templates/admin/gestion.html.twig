{% extends 'base.html.twig' %}

{% block body %}
    <div class="container py-5 text-white">
        <h1 class="mb-4 text-info">Gestión de Contenidos</h1>

        <div class="row g-5">
            <div class="col-md-4">
                <div class="card bg-dark border-info shadow p-4">
                    <h3 class="h5 text-info mb-4">Nueva Categoría</h3>
                    <form method="POST">
                        <div class="mb-3">
                            <label class="form-label">Nombre de la Categoría</label>
                            <input type="text" name="nombre" class="form-control bg-secondary text-white border-0" placeholder="Ej: Supervillanos" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">URL Imagen de Portada</label>
                            <input type="url" name="imagen_url" class="form-control bg-secondary text-white border-0" placeholder="https://..." required>
                        </div>
                        <button type="submit" name="new_categoria" class="btn btn-info w-100 fw-bold">CREAR CATEGORÍA</button>
                    </form>

                    <hr class="my-4 border-secondary">

                    <h3 class="h5 text-info mb-3">Resumen:</h3>
                    <ul class="list-group list-group-flush">
                        {% for c in categorias %}
                            <li class="list-group-item bg-transparent text-white border-secondary d-flex justify-content-between p-1">
                                <small>{{ c.nombre }}</small>
                                <span class="badge bg-info text-dark">{{ c.elementos|length }}</span>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card bg-dark border-success shadow p-4">
                    <h3 class="h5 text-success mb-4">Añadir Nuevo Elemento</h3>
                    <form method="POST">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Nombre del Elemento</label>
                                <input type="text" name="nombre" class="form-control bg-secondary text-white border-0" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Categoría Relacionada</label>
                                <select name="categoria_id" class="form-select bg-secondary text-white border-0" required>
                                    <option value="" selected disabled>Selecciona una categoría...</option>
                                    {% for c in categorias %}
                                        <option value="{{ c.id }}">{{ c.nombre }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">URL de la Imagen</label>
                            <input type="url" name="imagen_url" class="form-control bg-secondary text-white border-0" placeholder="https://..." required>
                        </div>
                        <button type="submit" name="new_elemento" class="btn btn-success w-100 fw-bold">GUARDAR ELEMENTO</button>
                    </form>
                </div>
            </div>
        </div>

        <hr class="my-5 border-secondary">

        <div class="row">
            <div class="col-md-4 mb-4">
                <h3 class="text-info h4 mb-3">Lista de Categorías</h3>
                <div class="table-responsive bg-dark rounded shadow-sm border border-info">
                    <table class="table table-dark table-hover mb-0">
                        <thead>
                        <tr>
                            <th>Imagen</th>
                            <th>Nombre</th>
                            <th class="text-end">Acción</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for c in categorias %}
                            <tr>
                                <td>
                                    {% if c.imagenUrl %}
                                        <img src="{{ c.imagenUrl }}" width="35" height="35" class="rounded" style="object-fit: cover;">
                                    {% else %}
                                        <div class="bg-secondary rounded" style="width: 35px; height: 35px;"></div>
                                    {% endif %}
                                </td>
                                <td>{{ c.nombre }}</td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a href="{{ path('admin_cat_editar', {id: c.id}) }}"
                                           class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-edit">EDITAR</i>
                                        </a>
                                        <a href="{{ path('admin_cat_borrar', {id: c.id}) }}"
                                           class="btn btn-outline-danger btn-sm"
                                           onclick="return confirm('¿Borrar categoría?')">
                                            <i class="fas fa-trash">ELIMINAR</i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-md-8">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3 class="text-success h4 m-0">Inventario de Elementos</h3>
                    <div class="d-flex gap-2 w-50">
                        <input type="text" id="buscador" class="form-control form-control-sm bg-dark text-white border-success" placeholder="Buscar por nombre...">
                        <select id="selector-categoria" class="form-select form-select-sm bg-dark text-white border-success">
                            <option value="todas">Todas</option>
                            {% for c in categorias %}
                                <option value="{{ c.nombre|lower }}">{{ c.nombre }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="table-responsive bg-dark rounded shadow-sm border border-success" style="max-height: 500px; overflow-y: auto;">
                    <table class="table table-dark table-hover align-middle mb-0" id="tabla-elementos">
                        <thead class="sticky-top bg-dark">
                        <tr>
                            <th>Imagen</th>
                            <th>Nombre</th>
                            <th>Categoría</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for c in categorias %}
                            {% for el in c.elementos %}
                                <tr class="fila-elemento" data-categoria="{{ c.nombre|lower }}">
                                    <td><img src="{{ el.imagenUrl }}" width="35" class="rounded"></td>
                                    <td class="nombre-el">{{ el.nombre }}</td>
                                    <td class="cat-el"><span class="badge bg-secondary">{{ c.nombre }}</span></td>
                                    <td class="text-end">
                                        <a href="{{ path('admin_el_editar', {id: el.id}) }}" class="btn btn-outline-warning btn-sm">
                                            <i class="fas fa-edit">EDITAR</i>
                                        </a>
                                        <a href="{{ path('admin_el_borrar', {id: el.id}) }}"
                                           class="btn btn-outline-danger btn-sm"
                                           onclick="return confirm('¿Eliminar a {{ el.nombre }}?')">
                                            <i class="fas fa-trash">ELIMINAR</i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const buscador = document.getElementById('buscador');
            const selector = document.getElementById('selector-categoria');

            function filtrar() {
                let filtroTexto = buscador.value.toLowerCase();
                let filtroCat = selector.value;
                let filas = document.querySelectorAll('.fila-elemento');

                filas.forEach(function(fila) {
                    let nombre = fila.querySelector('.nombre-el').textContent.toLowerCase();
                    let categoria = fila.getAttribute('data-categoria');

                    let coincideTexto = nombre.includes(filtroTexto);
                    let coincideCat = filtroCat === 'todas' || categoria === filtroCat;

                    if (coincideTexto && coincideCat) {
                        fila.style.display = '';
                    } else {
                        fila.style.display = 'none';
                    }
                });
            }

            buscador.addEventListener('keyup', filtrar);
            selector.addEventListener('change', filtrar);
        });
    </script>
{% endblock %}
