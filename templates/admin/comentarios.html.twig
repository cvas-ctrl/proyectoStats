{% extends 'base.html.twig' %}

{% block body %}
    <div class="container py-5 text-white">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="text-info mb-0"><i class="fas fa-comments me-2"></i>Moderación de Reseñas</h2>
                <p class="text-muted small mb-0">Gestiona los comentarios y opiniones de los ciudadanos del multiverso.</p>
            </div>
            <a href="{{ path('admin_stats') }}" class="btn btn-outline-info">
                <i class="fas fa-arrow-left me-1"></i> Volver a Stats
            </a>
        </div>

        <div class="card bg-dark border-info shadow">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-dark table-hover align-middle mb-0">
                        <thead class="table-info text-dark">
                        <tr>
                            <th class="ps-4">Usuario</th>
                            <th>Elemento</th>
                            <th>Reseña / Comentario</th>
                            <th class="text-center">Nota</th>
                            <th class="text-center">Fecha</th>
                            <th class="text-end pe-4">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for val in comentarios %}
                            <tr>
                                <td class="ps-4">
                                    <span class="text-info fw-bold">{{ val.usuario.email }}</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="{{ val.elemento.imagenUrl }}" width="40" height="40" class="rounded me-2 border border-secondary" style="object-fit: cover;">
                                        <div>
                                            <div class="fw-bold small">{{ val.elemento.nombre }}</div>
                                            <span class="badge bg-secondary" style="font-size: 0.6rem;">{{ val.elemento.categoria.nombre }}</span>
                                        </div>
                                    </div>
                                </td>
                                <td style="max-width: 400px;">
                                    <div class="p-2 bg-black bg-opacity-25 rounded small text-light border-start border-info">
                                        "{{ val.comentario }}"
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-warning text-white">{{ val.puntuacion }} ⭐</span>
                                </td>
                                <td class="text-center small text-muted">
                                    {{ val.fechaCreacion|date('d/m/Y') }}<br>
                                    {{ val.fechaCreacion|date('H:i') }}
                                </td>
                                <td class="text-end pe-4">
                                    <a href="{{ path('admin_comentario_borrar', {id: val.id}) }}"
                                       class="btn btn-outline-danger btn-sm"
                                       onclick="return confirm('¿Eliminar este comentario permanentemente?')">
                                        <i class="fas fa-trash-alt">Eliminar</i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="fas fa-comment-slash fa-3x mb-3 d-block"></i>
                                    Aún no hay comentarios con texto para moderar.
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
