{% extends 'base.html.twig' %}

{% block title %}Login - Multiverso{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card bg-dark text-white border-info shadow-lg">
                    <div class="card-header bg-info text-dark text-center fw-bold py-3">
                        <h1 class="h4 mb-0 text-uppercase">Acceso al Consejo</h1>
                    </div>
                    <div class="card-body p-4">
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger border-0 shadow-sm small">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </div>
                            {% endif %}

                            {% if app.user %}
                                <div class="alert alert-info border-0 small">
                                    Ya estás logueado como <span class="fw-bold">{{ app.user.userIdentifier }}</span>.
                                    <a href="{{ logout_path() }}" class="alert-link text-decoration-none">Cerrar Sesión</a>
                                </div>
                            {% endif %}

                            <div class="mb-4">
                                <label for="username" class="form-label text-info small text-uppercase fw-bold">Email interdimensional</label>
                                <div class="input-group border border-info rounded">
                                    <span class="input-group-text bg-dark border-0 text-info"><i class="fas fa-user"></i></span>
                                    <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control bg-dark text-white border-0 shadow-none" autocomplete="username" required autofocus placeholder="morty@smith.com">
                                </div>
                            </div>

                            <div class="mb-4">
                                <label for="password" class="form-label text-info small text-uppercase fw-bold">Contraseña secreta</label>
                                <div class="input-group border border-info rounded">
                                    <span class="input-group-text bg-dark border-0 text-info"><i class="fas fa-lock"></i></span>
                                    <input type="password" name="_password" id="password" class="form-control bg-dark text-white border-0 shadow-none" autocomplete="current-password" required placeholder="********">
                                </div>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <button class="btn btn-info w-100 fw-bold py-2 shadow-sm mb-3" type="submit">
                                ENTRAR AL PORTAL
                            </button>

                            <div class="text-center mt-3">
                                <span class="text-muted small">¿No tienes cuenta?</span>
                                <a href="{{ path('app_register') }}" class="text-info small text-decoration-none ms-1">Regístrate aquí</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
