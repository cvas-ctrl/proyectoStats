{% extends 'base.html.twig' %}

{% block title %}Inicio - Rick & Morty Stats{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style_home.css') }}">
{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="hero-section p-5 rounded-4 mb-5 text-center">
            <div class="hero-content">
                <h1 class="display-3 fw-bold rm-title">Wubba Lubba Dub Dub!</h1>
                <p class="fs-4 mt-3" style="color: var(--rm-blue);">Estad√≠sticas interdimensionales del universo C-137</p>
                <div class="mx-auto" style="width: 100px; height: 4px; background: var(--rm-portal-green);"></div>
            </div>
        </div>

        <div class="row g-4">
            {% for cat in categorias %}
                <div class="col-md-4">
                    <div class="card rm-card rounded-4 shadow-lg"
                         onclick="location.href='{{ path('app_ver_categoria', {'categoriaNombre': cat.nombre}) }}'"
                         style="cursor: pointer;
                             background-image: url('{{ cat.imagenUrl ?: 'https://via.placeholder.com/400' }}');
                             background-size: cover;
                             background-position: center;
                             min-height: 250px;">

                        <div class="card-overlay" style="background: rgba(0,0,0,0.6); height: 100%; border-radius: inherit; display: flex; flex-direction: column; justify-content: center; padding: 2rem;">
                            <h3 class="fw-bold text-white">{{ cat.nombre }}</h3>
                            <p class="small text-light">Explora el contenido de {{ cat.nombre }}</p>
                            <span class="badge bg-success mb-3 w-50">{{ cat.elementos|length }} elementos</span>
                            <a href="{{ path('app_ver_categoria', {'categoriaNombre': cat.nombre}) }}" class="btn btn-portal">Acceder</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
