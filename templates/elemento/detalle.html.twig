{% extends 'base.html.twig' %}

{% block body %}
    <div class="container py-5">
        <div class="row">
            <div class="col-md-4">
                <div class="card bg-dark border-info shadow-lg text-white overflow-hidden">
                    <img src="{{ el.imagenUrl }}" class="img-fluid" alt="{{ el.nombre }}">
                    <div class="card-body">
                        <h2 class="h4 text-info">{{ el.nombre }}</h2>
                        <hr class="bg-info">

                        <form action="{{ path('app_valorar', {'id': el.id}) }}" method="POST">
                            <label class="form-label small">¿Qué nota le das?</label>
                            <div class="input-group">
                                <select name="puntuacion" class="form-select bg-dark text-white border-info">
                                    {% for i in 10..1 %}
                                        <option value="{{ i }}">{{ i }}</option>
                                    {% endfor %}
                                </select>
                                <button class="btn btn-info">VOTAR</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card bg-dark text-white border-info p-4 mb-4">
                    <h3 class="text-info border-bottom border-info pb-2">EXPEDIENTE INTERDIMENSIONAL</h3>
                    <div class="row mt-3">
                        {% for clave, valor in el.datosExtra %}
                            <div class="col-6 mb-3">
                                <span class="text-muted text-uppercase small d-block">{{ clave }}</span>
                                <span class="fs-5">{{ valor|capitalize }}</span>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <div class="card bg-dark text-white border-secondary p-4">
                    <h4 class="h5 mb-3">Comentarios de la comunidad</h4>
                    <textarea class="form-control bg-dark text-white border-secondary mb-3" placeholder="Escribe tu teoría sobre este elemento..."></textarea>
                    <button class="btn btn-outline-secondary btn-sm">Enviar comentario</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
