{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-white mb-5">Listado de <span class="text-info">{{ nombreCategoria }}</span></h1>

        <div class="row">
            {% for el in elementos %}
                <div class="col-md-3 mb-4">
                    <div class="card h-100 bg-dark text-white border-info shadow">
                        <img src="{{ el.imagenUrl }}" class="card-img-top" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ el.nombre }}</h5>

                            <form action="{{ path('app_valorar', {'id': el.id}) }}" method="POST" class="mb-2">
                                <div class="input-group input-group-sm">
                                    <label class="input-group-text bg-dark border-info text-info small" for="puntuacion-{{ el.id }}">‚≠ê</label>
                                    <select name="puntuacion" class="form-select bg-dark text-white border-info" id="puntuacion-{{ el.id }}">
                                        {% for i in 10..1 %}
                                            <option value="{{ i }}">{{ i }}</option>
                                        {% endfor %}
                                    </select>
                                    <button type="submit" class="btn btn-outline-info">VOTAR</button>
                                </div>
                            </form>
                            <a href="{{ path('app_elemento_detalle', {'id': el.id}) }}"
                               class="btn btn-primary btn-sm rounded-pill">
                                EXPEDIENTE
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
