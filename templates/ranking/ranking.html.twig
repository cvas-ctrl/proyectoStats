{% extends 'base.html.twig' %}

{% block body %}
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h1 class="text-white m-0">TOP RANKING <span class="text-info">{{ categoriaActual|upper }}</span></h1>

            <div class="dropdown">
                <button class="btn btn-outline-info dropdown-toggle rounded-pill px-4" type="button" data-bs-toggle="dropdown">
                    Filtrar por Categoría
                </button>
                <ul class="dropdown-menu dropdown-menu-dark border-info">
                    {% for cat in categorias %}
                        <li>
                            <a class="dropdown-item {{ cat.nombre == categoriaActual ? 'active' : '' }}"
                               href="{{ path('app_ranking', {'categoria': cat.nombre}) }}">
                                {{ cat.nombre }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="card bg-dark border-info shadow-lg">
            <table class="table table-dark table-hover mb-0 text-white">
                <thead class="text-info">
                <tr>
                    <th class="ps-4">#</th>
                    <th>{{ categoriaActual|upper }}</th>
                    <th class="text-center">SCORE</th>
                    <th class="text-center">VOTOS</th>
                </tr>
                </thead>
                <tbody>
                {% for el in elementos %}
                    <tr class="align-middle">
                        <td class="ps-4 fw-bold text-muted">{{ loop.index }}</td>
                        <td>
                            <img src="{{ el['imagenUrl'] }}" width="50" height="50" class="rounded border border-info me-3" style="object-fit: cover;">
                            <span class="fw-bold">{{ el['nombre'] }}</span>
                        </td>
                        <td class="text-center">
                            <span class="badge bg-warning text-white fs-6">⭐ {{ el['media']|number_format(2) }}</span>
                        </td>
                        <td class="text-center small text-muted">{{ el['totalVotos'] }} usuarios</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center py-4 text-muted">No hay votos todavía en esta categoría.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
